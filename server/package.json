{
  "name": "todo-backend",
  "version": "1.0.0",
  "description": "A simple todo application backend built with Node.js and TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "npm run prettier -- --check && npm run eslint",
    "format": "npm run prettier -- --write && npm run eslint -- --fix",
    "eslint": "eslint src tests",
    "prettier": "prettier --ignore-path .gitignore '**/*.{ts,json,mjs,yaml,md}'",
    "docker:build": "docker build -t todo-app .",
    "docker:up": "npm run build && docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:start": "docker-compose up -d mongodb",
    "db:stop": "docker-compose stop mongodb",
    "dev:local": "npm run db:start && npm run dev"
  },
  "keywords": [
    "todo",
    "backend",
    "nodejs",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-openapi-validator": "^5.5.7",
    "mongodb": "^6.3.0",
    "neverthrow": "^8.2.0",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@tsconfig/strictest": "^2.0.5",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.2",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "@vitest/coverage-v8": "^3.2.4",
    "axios": "^1.10.0",
    "eslint": "^8.45.0",
    "mongodb-memory-server": "^9.1.4",
    "prettier": "3.6.2",
    "ts-mockito": "^2.6.1",
    "tsx": "^4.20.3",
    "typescript": "^5.1.6",
    "vitest": "^3.2.4"
  }
}
